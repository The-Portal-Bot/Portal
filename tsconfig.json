{
    "compilerOptions": {
        "incremental": true,
        "target": "es2020",
        "lib": [
            "es2020"
        ],
        "module": "commonjs",
        "allowJs": false,
        "checkJs": false,
        "jsx": "preserve",
        "declaration": true,
        "declarationMap": false,
        "sourceMap": false,
        "outDir": "build",
        "rootDir": "src",
        "composite": false,
        "removeComments": true,
        "strict": true,
        "noImplicitAny": true,
        "esModuleInterop": true,
        "resolveJsonModule": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts",
        "**/*.spec.js",
        "**/*.test.ts",
        "**/*.test.js"
    ]
}